{
  "name": "twitch-chat-mask",
  "version": "1.0.0",
  "description": "Twitchのチャットから心の平穏を保ちます。",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "run-p build:chrome build:firefox",
    "build:dev": "cross-env NODE_ENV=development wxt build",
    "build:analyze": "wxt build --analyze",
    "build:strict": "run-s postinstall typecheck build",
    "build:chrome": "wxt build -b chrome",
    "build:firefox": "wxt build -b firefox",
    "zip": "run-p zip:chrome zip:firefox",
    "zip:chrome": "wxt zip -b chrome",
    "zip:firefox": "wxt zip -b firefox",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --apply .",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@webext-core/messaging": "^1.4.0",
    "framer-motion": "^11.0.3",
    "nanoid": "^5.0.5",
    "react-icons": "^5.0.1"
  },
  "devDependencies": {
    "@apollo/client": "^3.9.4",
    "@biomejs/biome": "^1.5.3",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "fast-deep-equal": "^3.1.3",
    "lefthook": "^1.6.1",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "wxt": "^0.16.8"
  }
}
