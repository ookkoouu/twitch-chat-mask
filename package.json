{
  "name": "twitch-chat-mask",
  "displayName": "Twitch Chat Mask",
  "version": "0.3.0",
  "description": "Twitchのチャットから心の平穏を保ちます。",
  "author": "okou",
  "homepage": "https://github.com/ookkoouu/twitch-chat-mask",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "pack": "run-p pack:*",
    "pack:chrome": "plasmo build --zip --target=chrome-mv3",
    "pack:firefox": "plasmo build --zip --target=firefox-mv3",
    "clean": "rimraf build",
    "format": "prettier -w 'src/**/*.{ts,tsx,css}",
    "test": "plasmo test"
  },
  "manifest": {
    "author": "okou",
    "browser_specific_settings": {
      "gecko": {
        "id": "{7d719697-1853-46ef-80da-9254cbc363b7}",
        "strict_min_version": "121"
      }
    }
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.0",
    "@plasmohq/storage": "^1.9.0",
    "plasmo": "^0.84.0",
    "preact": "^10.19.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/cache": "^11.11.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.253",
    "@types/node": "20.10.3",
    "@types/react": "18.2.42",
    "@types/react-dom": "18.2.17",
    "framer-motion": "^10.16.14",
    "npm-run-all": "^4.1.5",
    "prettier": "3.1.0",
    "react-icons": "^4.12.0",
    "rimraf": "^5.0.5",
    "typescript": "5.3.2"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat",
    "react/jsx-runtime": "preact/jsx-runtime"
  }
}
